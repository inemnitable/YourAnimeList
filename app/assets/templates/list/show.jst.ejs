<% var header = JST['list/col_titles'] %>

<a href="javascript:void(0)" class="addAnime">Add Anime</a>

<h4>Watching</h4>
<table class="listTable">
<%= header() %>
<tbody class="listBody">
  <% var watching = JST['list/watching_row'] %>
  <% list.get("items").chain()
    .select(function(item){ return item.get("status") === "Watching" })
    .each(function(item, idx){ %>
    <%= watching({
      item: item,
      idx: idx,
      editProgress: editProgress,
      editRating: editRating,
      editComment: editComment
    }) %>
  <% }) %>
</tbody>
</table>

